<script type="text/ng-template" id="toggle.html">
    <div class="form-group  has-feedback" ng-class="{'has-error' :info}">
        <label class="col-sm-3 text-muted control-label ">{{title}}</label>
        <div class="col-sm-9">

            <div class="input-group ">
                <input type="text" class="form-control " placeholder="搜索{{title}}"
                       ng-model="sousuoInput"  ng-change="sousuoInputChange()" value="">

                <div class="input-group-btn ">
                    <a class="btn btn-default dropdown-toggle "
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                       ng-click="sousuoBtnClick()">

                        <span class="{{btnIcon}} sousuoBtn"></span>&nbsp;
                    </a>
                    <ul class="dropdown-menu  pull-right "
                        style="width: 380px; max-height: 200px; overflow: auto">

                        <div style="padding: 10px; text-align: center;font-size: 12px " ng-show="loadingShow">
                            <img ng-src="/images/angularjs/lh_file/images/loading.gif" class="" style="width: 30px;">
                        </div>
                        <li ng-click="itemClose()" ng-show="itemShow">

                            <a href="#" >-不选择-</a>
                        </li>

                        <li ng-repeat="item in items" ng-click="itemClick($index)" ng-show="itemShow">

                            <a href="#" ng-bind="item.groupName">...</a>
                        </li>


                    </ul>
                </div><!-- /btn-group -->

            </div><!-- /input-group -->
            <span ng-show="info" class="text-danger ">不能为空</span>

        </div>


    </div>

</script>

